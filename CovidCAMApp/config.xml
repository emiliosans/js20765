<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.cam.covid.ionic" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Covid CAM</name>
    <description>
        Una aplicación para consultar las estadísticas del COVID en Madrid y en España
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        JS 20765 Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <!--<preference name="SplashScreenDelay" value="5200" />-->
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreenSpinnerColor" value="white" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="ic_launcher.png"/>
        <!--<splash src="res/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
        <splash src="res/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="res/android/splash-port-xhdpi.png" density="port-xhdpi"/>-->
        <splash src="res/android/splashscreen.png"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
